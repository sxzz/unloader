    "quansync": "^1.0.0",
    "unconfig": "^7.4.2"
  },
  "devDependencies": {
    "@antfu/utils": "^9.3.0",
    "@quansync/fs": "^1.0.0",
    "@sxzz/eslint-config": "^7.4.5",
    "@sxzz/prettier-config": "^2.2.6",
    "@types/node": "^24.10.9",
    "@types/picomatch": "^4.0.2",
    "@typescript/native-preview": "7.0.0-dev.20260118.1",
    "bumpp": "^10.4.0",
    "eslint": "^9.39.2",
    "magic-string": "^0.30.21",
    "prettier": "^3.8.0",
    "tsdown": "^0.19.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "unplugin-quansync": "^0.5.1"
  },
  "prettier": "@sxzz/prettier-config"
}
