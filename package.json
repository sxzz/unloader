{
  "name": "unloader",
  "version": "0.1.1",
  "packageManager": "pnpm@10.2.0",
  "description": "Node.js Loader with a Rollup-like interface.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/unloader#readme",
  "bugs": {
    "url": "https://github.com/sxzz/unloader/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/unloader.git"
  },
  "author": "三咲智子 Kevin Deng <sxzz@sxzz.moe>",
  "funding": "https://github.com/sponsors/sxzz",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "format": "prettier --cache --write .",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^5.0.1",
    "@sxzz/prettier-config": "^2.1.1",
    "@types/node": "^22.13.1",
    "bumpp": "^10.0.2",
    "eslint": "^9.19.0",
    "oxc-transform": "^0.48.2",
    "prettier": "^3.4.2",
    "tsdown": "^0.5.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": "^18.19.0 || >=20.6.0"
  },
  "prettier": "@sxzz/prettier-config"
}
