{
  "name": "unloader",
  "version": "0.7.1",
  "packageManager": "pnpm@10.21.0",
  "description": "Node.js loader with a Rollup-like interface.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/unloader#readme",
  "bugs": {
    "url": "https://github.com/sxzz/unloader/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/unloader.git"
  },
  "author": "Kevin Deng <sxzz@sxzz.moe>",
  "funding": "https://github.com/sponsors/sxzz",
  "files": [
    "dist"
  ],
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./register": "./dist/register.mjs",
    "./register-sync": "./dist/register-sync.mjs",
    "./worker": "./dist/worker.mjs",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "node --test",
    "typecheck": "tsc --noEmit",
    "format": "prettier --cache --write .",
    "release": "bumpp",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@jridgewell/remapping": "^2.3.5",
    "birpc": "^2.8.0",
    "obug": "^2.0.0-beta.1",
    "picomatch": "^4.0.3",
    "quansync": "^0.2.11",
    "unconfig": "^7.4.1"
  },
  "devDependencies": {
    "@antfu/utils": "^9.3.0",
    "@quansync/fs": "^0.1.5",
    "@sxzz/eslint-config": "^7.2.10",
    "@sxzz/prettier-config": "^2.2.4",
    "@types/node": "^24.10.1",
    "@types/picomatch": "^4.0.2",
    "bumpp": "^10.3.1",
    "eslint": "^9.39.1",
    "magic-string": "^0.30.21",
    "prettier": "^3.6.2",
    "tsdown": "^0.16.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "unplugin-quansync": "^0.4.5"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "prettier": "@sxzz/prettier-config"
}
