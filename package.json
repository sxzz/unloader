{
  "name": "unloader",
  "version": "0.4.2",
  "packageManager": "pnpm@10.6.4",
  "description": "Node.js loader with a Rollup-like interface.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/unloader#readme",
  "bugs": {
    "url": "https://github.com/sxzz/unloader/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/unloader.git"
  },
  "author": "三咲智子 Kevin Deng <sxzz@sxzz.moe>",
  "funding": "https://github.com/sponsors/sxzz",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./register": "./dist/register.js",
    "./register-sync": "./dist/register-sync.js",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "node --test",
    "typecheck": "tsc --noEmit",
    "format": "prettier --cache --write .",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@ampproject/remapping": "^2.3.0",
    "birpc": "^2.2.0",
    "debug": "^4.4.0",
    "quansync": "^0.2.10",
    "unconfig": "^7.3.1"
  },
  "devDependencies": {
    "@quansync/fs": "^0.1.1",
    "@sxzz/eslint-config": "^6.0.2",
    "@sxzz/prettier-config": "^2.2.1",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.13.10",
    "bumpp": "^10.1.0",
    "eslint": "^9.22.0",
    "magic-string": "^0.30.17",
    "oxc-transform": "^0.60.0",
    "prettier": "^3.5.3",
    "tsdown": "^0.6.9",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "unplugin-quansync": "^0.3.5"
  },
  "engines": {
    "node": "^18.19.0 || >=20.6.0"
  },
  "prettier": "@sxzz/prettier-config"
}
