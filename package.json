{
  "name": "unloader",
  "version": "0.4.5",
  "packageManager": "pnpm@10.14.0",
  "description": "Node.js loader with a Rollup-like interface.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/unloader#readme",
  "bugs": {
    "url": "https://github.com/sxzz/unloader/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/unloader.git"
  },
  "author": "三咲智子 Kevin Deng <sxzz@sxzz.moe>",
  "funding": "https://github.com/sponsors/sxzz",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./register": "./dist/register.js",
    "./register-sync": "./dist/register-sync.js",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "node --test",
    "typecheck": "tsc --noEmit",
    "format": "prettier --cache --write .",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@jridgewell/remapping": "^2.3.4",
    "birpc": "^2.5.0",
    "debug": "^4.4.1",
    "quansync": "^0.2.10",
    "unconfig": "^7.3.2"
  },
  "devDependencies": {
    "@quansync/fs": "^0.1.4",
    "@sxzz/eslint-config": "^7.1.2",
    "@sxzz/prettier-config": "^2.2.3",
    "@types/debug": "^4.1.12",
    "@types/node": "^24.2.1",
    "bumpp": "^10.2.2",
    "eslint": "^9.33.0",
    "magic-string": "^0.30.17",
    "prettier": "^3.6.2",
    "tsdown": "^0.13.4",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "unplugin-quansync": "^0.4.3"
  },
  "engines": {
    "node": "^18.19.0 || >=20.6.0"
  },
  "prettier": "@sxzz/prettier-config"
}
